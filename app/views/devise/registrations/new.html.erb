<body class="bg-dark">
  <div class="container">
    <div class="card card-register mx-auto mt-5">
      <div class="card-header">회원가입</div>
        <div class="card-body">
          
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            
            <div class="field">
              <%= f.label :이메일 %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width:100%", placeholder: "이메일을 입력하세요" %>
            </div>
          
            <div class="field">
              <%= f.label :비밀번호 %>
              <% if @minimum_password_length %>
              <em>(최소 <%= @minimum_password_length %>자리)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", style: "width:100%", placeholder: "비밀번호를 입력하세요" %>
            </div>
          
            <div class="field">
              <%= f.label :'비밀번호 재확인' %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", style: "width:100%", placeholder: "비밀번호 재확인" %>
            </div>
          
            <div class="actions">
              </br>
              <%= f.submit "회원가입", class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</body>
