<body class="bg-dark">
  <div class="container">
    <div class="card card-login mx-auto mt-5">
      <div class="card-header">로그인</div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :아이디 %><br />
              <%= f.text_field :user_id, autofocus: true, autocomplete: "off", style: "width:100%", placeholder: "아이디를 입력하세요" %>
            </div>
          
            <div class="field">
              <%= f.label :비밀번호 %><br />
              <%= f.password_field :password, autocomplete: "off", style: "width:100%", placeholder: "비밀번호를 입력하세요" %>
            </div>
          
            <!--<% if devise_mapping.rememberable? -%>-->
            <!--  <div class="field">-->
            <!--    <%= f.check_box :remember_me %>-->
            <!--    <%= f.label :비밀번호저장 %>-->
            <!--  </div>-->
            <!--<% end -%>-->
          
            <div class="actions">
              </br>
              <%= f.submit "로그인", class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>
          
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</body>