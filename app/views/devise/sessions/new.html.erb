<style>
  html, body {
    height: 100%; overflow: hidden;
  }
  div {
    height: 100%; border: 1px;
  }
  
</style>

<div class="container" id="container_height" style="background-color: #eeeeee;">
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mb-3">
        <%= f.text_field :user_id, autofocus: true, autocomplete: "off", style: "width:100%; height:2rem;", placeholder: "아이디를 입력하세요" %>
      </div>
    
      <div class="field">
        <%= f.password_field :password, autocomplete: "off", style: "width:100%; height:2rem;", placeholder: "비밀번호를 입력하세요" %>
      </div>
    
      <!--<% if devise_mapping.rememberable? -%>-->
      <!--  <div class="field">-->
      <!--    <%= f.check_box :remember_me %>-->
      <!--    <%= f.label :비밀번호저장 %>-->
      <!--  </div>-->
      <!--<% end -%>-->
      <div class="field mt-3">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "비밀번호 찾기", new_password_path(resource_name), style: 'float: right' %><br />
        <% end -%>
      </div>
      
      <div class="actions mt-3">
        <%= f.submit "로그인", class: 'btn btn-primary btn-block', style: 'background-color: #91180b'%>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>